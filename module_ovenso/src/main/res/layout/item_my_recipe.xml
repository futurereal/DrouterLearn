<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mode_bg"
        android:layout_width="294dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mode_tip"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/shape_solid_white_al_cor14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_chunzheng" />

        <TextView
            android:id="@+id/mode_name"
            style="@style/font_style_sc_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="74dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxEms="6"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/mode_tip"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/mode_power_time"
            style="@style/font_style_sc_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:alpha="0.8"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintLeft_toLeftOf="@id/mode_name"
            app:layout_constraintTop_toBottomOf="@id/mode_name"
            tools:text="@string/app_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>