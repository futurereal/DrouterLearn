<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/color_black_0f">

        <ImageView
            android:id="@+id/menuitem_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:paddingVertical="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/menuitem_wlan" />


        <TextView
            android:id="@+id/menuitem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:text="@string/menuitem_wlan"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="@id/menuitem_icon"
            app:layout_constraintLeft_toRightOf="@id/menuitem_icon"
            app:layout_constraintTop_toTopOf="@id/menuitem_icon" />

        <ImageView
            android:id="@+id/menuitem_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:src="@drawable/set_more_white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/menuitem_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/menuitem_icon" />

        <TextView
            android:id="@+id/menuitem_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:textColor="@color/color_99"
            android:textSize="38dp"
            app:layout_constraintBottom_toBottomOf="@id/menuitem_icon"
            app:layout_constraintEnd_toStartOf="@id/menuitem_arrow"
            app:layout_constraintTop_toTopOf="@id/menuitem_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/color_33"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>