<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        tools:background="@color/black">

        <TextView
            android:id="@+id/aboutware_title"
            style="@style/setting_normal_text_horizontal_style"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/aboutsofe_menu_sofeversion" />

        <TextView
            android:id="@+id/aboutware_content"
            style="@style/setting_normal_text_horizontal_style.gray"
            android:layout_marginRight="10dp"
            android:gravity="end"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="@id/aboutware_jumptip"
            app:layout_constraintRight_toLeftOf="@id/aboutware_jumptip"
            app:layout_constraintTop_toTopOf="@id/aboutware_jumptip"
            tools:text="@string/aboutsofe_menu_firmversion" />

        <ImageView
            android:id="@+id/aboutware_jumptip"
            style="@style/setting_normal_text_horizontal_style.gray"
            android:layout_marginRight="20dp"
            android:src="@drawable/set_more_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>