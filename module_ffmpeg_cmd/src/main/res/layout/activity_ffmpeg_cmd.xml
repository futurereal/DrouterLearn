<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <Button
            android:id="@+id/ffmpegcmd_cutvideo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/viomi_green"
            android:text="剪切视频"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ffmpegcmd_mergevideo"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ffmpegcmd_mergevideo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/red_stroke"
            android:text="合成视频"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ffmpegcmd_extract_picture"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@id/ffmpegcmd_cutvideo"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ffmpegcmd_extract_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/red_stroke"
            android:text="获取封面"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@id/ffmpegcmd_mergevideo"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>