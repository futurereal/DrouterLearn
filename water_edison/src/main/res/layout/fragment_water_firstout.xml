<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_dialog_single"
        android:keepScreenOn="true">

        <TextView
            android:id="@+id/waterout_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/bebas_neue_bold"
            android:text="10"
            android:textColor="@color/color_green_light"
            android:textSize="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/waterout_countdown_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/bebas_neue_bold"
            android:text="s"
            android:textColor="@color/color_green_light"
            android:textSize="37dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/waterout_countdown"
            app:layout_constraintStart_toEndOf="@+id/waterout_countdown" />

        <TextView
            android:id="@+id/waterout_protect_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="@string/first_water_out_title"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/waterout_countdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/first_water_out_desc"
            android:textColor="#B2B2B2"
            android:textSize="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/waterout_protect_tip" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>