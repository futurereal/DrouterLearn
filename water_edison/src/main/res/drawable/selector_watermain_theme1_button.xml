<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:type="linear" android:useLevel="true" android:startColor="@color/white_20" android:endColor="@color/white_20" android:angle="360" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="0" android:endColor="@color/white_25" android:startColor="@color/white_25" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>